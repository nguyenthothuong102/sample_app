<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    </aside>
    <div class="col-md-8">
      <h3><%= t(".micropost_feed") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t(".text1") %></h1>
  <h2>
    <%= t(".text2") %>
    <%= link_to t(".text4"), Settings.link13 %><%= t ".text3" %>
  </h2>
  <%= link_to t(".text5"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag(Settings.link15), Settings.link14 %>
<% end %>
